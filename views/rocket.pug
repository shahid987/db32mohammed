extends layout

block content
  h1= title
  //- - let items = ['rocket_type','quantity','cost']
  - let items = results;
  - let o;
  script.
    function buy(x){
      alert('purchased item ' + x)
   } 
  div(class='container-fluid')
  a(class="btn-btn-primary" href="rocket/create") create
    div(class='row m-1')
    div(class="row row-cols-1 row-cols-sm-4 g-6")
      each item, index in items
        - let destination = `dispatch(\"/rocket/update?id=${item._id}\")`
        -let details = `dispatch(\"/rocket/detail?id=${item._id}\");`
        div(class="card text-white bg-dark mb-3" class='col' class='card' class='card-body' class='card-text' onclick='buy('+index+')') Item #{item.rocket_type}(#{item.quantity})is #{item.cost}
          <br><br>
          span(class="btn btn-info", onclick= details) Details
          <br>
          a(class="btn btn-danger", href="/rocket/delete/?id="+item._id) Delete
          <br>
          button.btn( class="btn-danger ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }
          
          

  
