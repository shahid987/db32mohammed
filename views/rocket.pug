extends layout

block content
  h1= title
  - let items = results;
  - let o;
  script.
    function buy(x){
      alert('purchased item ' + x)
   } 
  div(class='container-fluid')
  a(href = "restaurant/create") create
    div(class='row')
      each o, index in items
        div(class='col-sm-3' onclick='buy('+index+')') #{o} 
        a(href = "restaurant/detail/?id=" + o._id) detail

        a(href = "restaurant/update/?id=" + o._id) update

        a(href = "restaurant/delete/?id=" + o._id) delete
        
        

  
